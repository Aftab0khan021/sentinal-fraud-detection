[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    node_modules

# Ignore specific error codes
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file (for conditional imports)

# Error codes to always check
select = E,W,F

# Complexity
max-complexity = 15

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
